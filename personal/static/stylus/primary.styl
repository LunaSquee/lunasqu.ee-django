body
    margin: 0
    padding: 0
    height: 100%
    background: url("/static/images/ponyville_day.jpg");
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    background-color: #B9E8FF;
    font-family: Open Sans, Everson Mono, Helvetica

h1,h2,h3,h4,h5,h6
    margin-top: 0

a
    color: green
    text-decoration: none
    &:hover
        color: #00B100

blockquote
    background-color: rgba(187, 233, 255, 0.6)
    padding: 5px
    border-left: 5px solid #1da6ff
    border-radius: 0 10px 10px 0

input[type="text"], input[type="email"], input[type="password"]
    padding: 5px
    border-radius: 2px
    border: 1px solid #ddd
    box-shadow: inset 2px 2px 5px #d8d8d8

.button, input[type=submit]
    padding: 1px 13px
    font-size: 18px
    background-color: #f6f6f6
    border-radius: 5px
    border: 1px solid #D4D4D4
    cursor: pointer
    color: green
    &:hover
        background-color: #F9F9F9
        color: #00B100

.replybtn
    float: right

.clearfix
    overflow:auto

.user
    width: auto
    float: right
    padding: 10px
    background-color: rgba(238,238,238,0.6)
    margin-right: 10px

.logo
    margin: 20px
    a
        font-size: 40px
        color: #009DFF
        text-shadow: 2px 2px 3px #1DA6FF

.navigator
    width: 200px
    background-color: rgba(238,238,238,0.6)
    margin: 10px
    float: left

.content
    background-color: rgba(238,238,238,0.6)
    margin: 10px
    margin-left: 220px
    padding: 20px
    min-height: 80vh
    position: relative

.navigator ul
    padding: 0
    margin: 20px
    list-style-type: none
    li 
        margin-bottom: 10px
        a
            font-size: 22px
            text-decoration: none

.ttitle
    font-size: 26px
    font-weight: bold

.boxheader, .boxfooter
    padding: 10px
    background-color: #FDFDFD
    border-radius: 10px 10px 0 0
    font-size: 20px
    border-bottom: 2px solid #ddd

.boxfooter
    border-bottom: none
    border-radius: 0 0 10px 10px

#postlist
    border-left: 1px solid #ddd
    border-right: 1px solid #ddd
    .p_username
        display: block
        font-size: 20px
        height: 30px
        background-color: #d5efff
        padding: 10px
        .postid
            float: right
            font-size: 15px
            color: #86d0ff
        .ipaddr
            float: right
            font-size: 12px
            margin-right: 10px
            color: red
    .post
        padding: 10px
        border-bottom: 2px solid #ddd
        min-height: 300px
        position: relative
        background-color: #fff
        .poster
            float: left
            width: 140px
            min-height: 160px
            padding-right: 5px
            .avatar
                max-width: 140px
                max-height: 200px
                min-width: 80px
                min-height: 80px
                display: block
            .reputation
                display: block
                text-align: center
                color: #1da6ff
                margin-bottom: 2px
            .newparam
                display: block
                font-size: 14px
                color: #7d7d7d
            .badge
                font-size: 10px
        .container
            word-wrap: break-word
            margin-left: 150px
            overflow: auto
            min-height: 280px
            max-height: 2046px
            margin-bottom: 20px
            .removed-post
                color: red
                font-style: italic
                font-size: 20px
            *
                max-width: 100% !important
                max-height: 200% !important
        .subarea
            margin-left: 150px
            min-height: 24px
            .date 
                float: right
                font-size: 15px
                font-style: italic
                color: #9c9c9c
                &.updated
                    color: #000 !important
                    font-weight: bolder
                    margin-right: 10px
        .vertical_divider
            position: absolute
            top: 0
            left: 155px
            bottom: 0
            width: 1px
            background-color: #f3f3f3

#list table
    background-color: #FFF
    border-radius: 5px
    border: 1px solid #ddd
    border-collapse: collapse

    th
        background-color: #fafafa
        border-bottom: 1px solid #ddd

    tr
        &:nth-child(even)
            background-color: #f5f5f5

        .count_part
            width: 40px
            text-align: center

    .indic
        width: 40px
        text-align: center
        .fa
            font-size: 30px
            &.fa-lock
                color: #ffa500
            &.fa-user
                color: #1da6ff
    .title
        .fa-ban
            color: red
        .fa-thumb-tack
            color: orange
    
    .createdby
        font-size: 14px
    
    .actions
        text-align: center

.forumtitle, .topictitle, .sectiontitle
    display: block;
    margin: 10px 0px 0px 0px;
    font-size: 36px;
    font-weight: bold;
    color: #0068b7;
    display: block;
    span
        color: green;
        &:after
            content: ": "

.forumdescription, .topicdescription
    color: #0056ff;
    font-size: 20px;
    display: block;
    margin-bottom: 20px;

.forumnavigator
    margin: 10px 0px 30px 0px;
    display: block;
    .instance
        position: relative;
        background: #eee;
        border: 1px solid #ddd;
        padding: 4px 10px 4px 30px;
        font-size: 16px;
        float: left;
        
        &:after, &:before
            left: 100%;
            top: 50%;
            border: solid transparent;
            content: " ";
            height: 0;
            width: 0;
            position: absolute;
            pointer-events: none;

        &:after
            border-color: rgba(238, 238, 238, 0);
            border-left-color: #eee;
            border-width: 15px;
            margin-top: -15px;

        &:before
            border-color: rgba(221, 221, 221, 0)
            border-left-color: #ddd
            border-width: 16px
            margin-top: -16px

#id_title
    padding: 6px
    width: 500px
    display: block
    box-shadow: inset 1px 1px 5px #ddd
    border: 1px solid #D4D4D4
    border-radius: 5px

.successbox, .errorbox
    background-color: rgba(219, 255, 219, 0.7);
    border: 1px solid #00b100
    border-radius: 5px
    padding: 20px

.errorbox
    background-color: rgba(255, 223, 223, 0.7)
    border: 1px solid #f00

.messages
    margin: 5px
    padding: 0
    list-style-type: none
    .error
        background-color: rgba(255, 223, 223, 0.7)
        border-radius: 5px
        border: 1px solid #f00
        padding: 20px
    .success
        background-color: rgba(219, 255, 219, 0.7);
        border: 1px solid #00b100
        border-radius: 5px
        padding: 20px

.errorlist
    margin: 5px
    background-color: rgba(255, 223, 223, 0.7)
    border-radius: 5px
    border: 1px solid #f00
    padding: 20px
    list-style-type: none

.blog_post
    .title
        display: block
        font-size: 26px
        font-weight: bold
    .date
        font-size: 13px
        font-style: italic
        &:before
            content: "Posted at "

.registerbox
    .helptext
        display: block
        font-size: 12px
        color: #f00
    label
        width: 200px
        display: inline-block

.loginbox
    label
        width: 100px
        display: inline-block

.profile
    .leftside
        width: 235px
        padding: 5px
        position: absolute
        left: 0
        top: 0
        bottom: 0
        border-right: 1px solid rgba(206, 206, 206, 0.5)
        .avatarcontainer
            height: 240px
            width: 240px
            position: relative
            .avatar
                max-width: 100%
                max-height: 100%
                position: absolute
                left: 0
                top: 0
                right: 0
                bottom: 0
                margin: auto
        .userdata
            .reputation
                display: block
                font-size: 20px
                color: #0068b7
                text-align: center
                margin: 10px 0
            .postcount
                display: block
    .rightside
        position: absolute
        left: 246px
        top: 0
        bottom: 0
        right: 0
        .profheader
            padding: 10px
            .display_name
                display: block
                font-size: 38px
                font-weight: bold
                color: #1da6ff
            .username
                font-size: 16px
                color: #737373
        .profcontent
            padding: 10px

.statusbtn
    display: inline-block
    width: 65px
    text-align: center
    margin: 0 5px
    background-color: #21e621
    color: white
    font-weight: bold
    text-transform: uppercase
    border-radius: 5px
    border: 1px solid #00a900
    box-shadow: inset 3px 3px 2px #00ff00
    cursor: default

.statuscirc
    width: 12px
    height: 12px
    display: inline-block
    vertical-align: middle
    border: 1px solid #00a900
    box-shadow: inset 3px 3px 2px #00ff00
    background-color: #21e621
    border-radius: 100%
    margin-bottom: 4px
    cursor: default

.statusbtn.offline, .statuscirc.offline
    border: 1px solid #b70000
    box-shadow: inset 3px 3px 2px #f30
    background-color: #f00

@media all and (max-width: 699px)
    body
        font-size: 12px
    .user
        float: initial
        margin: 10px auto
        text-align: center
    .logo
        text-align: center
    .navigator
        float: initial
        margin: 10px auto
        padding: 10px 0
    .content
        margin-left: 0
        margin: 10px auto
    .post
        .date
            font-size: 10px !important

.badges
    .badge
        text-align: center
        padding: 10px 5px
        margin: 1px 0
        border-radius: 5px
        color: #fff
        font-weight: bold
        text-transform: uppercase
        position: relative
        background-color: #00b100
        box-shadow: inset 3px 3px 6px #28ce28
        &.b-admin
            box-shadow: inset 3px 3px 8px #ca0000
            background-color: #820000
        &.b-forummod
            background-color: #00bfea;
            color: #0068b7;
            box-shadow: inset 3px 3px 9px #a7dcff
    .b-daylightdream
        background-color: #C5004F
        box-shadow: inset 3px 3px 9px #fd0065
        &:before
            content: ""
            background: url("/static/images/dd_icon.png") no-repeat
            background-size: contain
            position: absolute
            left: 0
            bottom: 0
            height: 40px
            width: 40px
            border-radius: 5px

.messagehead
    height: 130px
    border-bottom: 1px solid #0068b7
    .profilepic
        float: left
        width: 120px
        height: 120px
        position: relative
        img
            max-height: 120px
            max-width: 120px
            position: absolute
            top:0
            left:0
            right:0
            bottom:0
            margin: auto
    .title
        margin-left: 5px

.messagecontent
    clear: both
    max-height: 2060px
    overflow: auto

.tabinator
    background-color: #1da6ff
    list-style-type: none
    padding: 0
    .tab
        display: inline-block
        padding: 10px 0
        &.active
            a
                background-color: #0068b7 
        a
            padding: 10px 10px
            color: white
            &:hover
                background-color: #37b0ff  
